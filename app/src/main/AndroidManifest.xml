<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.zakkyfirdaus.kelaskoding">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name="id.zakkyfirdaus.kelaskoding.Splashscreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="id.zakkyfirdaus.kelaskoding.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--android:screenOrientation="portrait"-->
        <activity
            android:name="id.zakkyfirdaus.kelaskoding.StreamActivity"
            android:theme="@style/Theme.FullScreen" />
        <activity
            android:screenOrientation="portrait"
            android:name="id.zakkyfirdaus.kelaskoding.BookActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name="id.zakkyfirdaus.kelaskoding.ReportActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name="id.zakkyfirdaus.kelaskoding.GenreActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name="id.zakkyfirdaus.kelaskoding.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name="id.zakkyfirdaus.kelaskoding.AuthActivity"
            android:theme="@style/Theme.FullScreen" />
        <activity
            android:screenOrientation="portrait"
            android:name="id.zakkyfirdaus.kelaskoding.AboutActivity"/>
    </application>

</manifest>